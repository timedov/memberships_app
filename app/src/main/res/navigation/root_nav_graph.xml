<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_nav_graph"
    app:startDestination="@id/savePostFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.auth.presentation.login.LoginFragment"
        android:label="LoginFragment" />

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.feed.presentation.FeedFragment"
        android:label="FeedFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.profile.presentation.ProfileFragment"
        android:label="ProfileFragment" >

        <argument
            android:name="username"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/subscribeFragment"
        android:name="com.example.subscribe.presentation.SubscribeFragment"
        android:label="SubscribeFragment">

        <argument
            android:name="username"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/saveTierFragment"
        android:name="com.example.savetier.presentation.SaveTierFragment"
        android:label="SaveTierFragment">

        <argument
            android:name="tierId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.postdetails.presentation.PostDetailsFragment"
        android:label="PostDetailsFragment">

        <argument
            android:name="postId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/commentRepliesFragment"
        android:name="com.example.commentreplies.presentation.CommentRepliesFragment"
        android:label="CommentRepliesFragment">

        <argument
            android:name="parentCommentId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/savePostFragment"
        android:name="com.example.savepost.presentation.SavePostFragment"
        android:label="SavePostFragment" />
</navigation>